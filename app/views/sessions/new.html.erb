<% provide :title, t("login.log_in") %>
<div class="mt-5 mb-5">
  <h1><%= t "login.log_in" %></h1>
  <div class="row">
    <div class="tong-form col-md-6 col-md-offset-3">
      <%= form_for :session, url: login_path do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
        <%= f.label :password, t("sessions.password") %>
        <%= link_to t("forgot_password.(title)"), new_password_reset_path %>
        <%= f.password_field :password, class: "form-control" %>
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span><%= t "sessions.text_save_login" %></span>
        <% end %>
        <%= f.submit t("login.log_in"), class: "btn btn-primary" %>
      <% end %>
      <p><%= t "sessions.new_user" %><%= link_to t("sessions.sign_up_now"), signup_path %></p>
    </div>
  </div>
</div>
